<Window x:Class="CMCS1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid Background="#FF0721D7">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel.Background>
                <ImageBrush ImageSource="/Powerful Video Ads for Effective Business Marketing.jpg"/>
            </StackPanel.Background>
            <TextBlock Text="Emploee ID:" Foreground="Black"/>
            <TextBox x:Name="EmployeeIDTextBox" Margin="10" />
            <TextBlock Text="Password:" Foreground="Black"/>
            <PasswordBox x:Name="PasswordBox" Margin="10" />
            <Button Content="Login" Margin="10" Click="LoginButton_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF0A52F1" Offset="0.385"/>
                        <GradientStop Color="#FF4079F8" Offset="0.481"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <TextBlock Margin="10" HorizontalAlignment="Center">
                Don't have an account? <Hyperlink Click="OpenRegisterWindow_Click">Register here</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
